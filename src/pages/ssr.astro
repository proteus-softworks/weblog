---
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import Avatar from "../components/RandomAvatar.astro";
---

<Layout>
  <main class="laptop:pt-32 tablet:pt-6 pt-4">
    <section class="flex items-end gap-4">
      <h1 class="tablet:mb-4 mb-2 whitespace-nowrap">SSR</h1>
    </section>

    <section class="space-y-4">
      <Avatar server:defer class="h-16 w-16">
        <div slot="fallback" class="bg-base-100 h-16 w-16"></div>
      </Avatar>
      <Avatar class="h-16 w-16" />
    </section>
  </main>
</Layout>
