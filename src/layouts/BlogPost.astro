---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Prose from "../components/Prose.astro";

type Props = CollectionEntry<"posts">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<script>
  // This script runs on the client after the page loads.
  function uncheckAllCheckboxes() {
    // Select all input elements with the type "checkbox"
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');

    console.log(checkboxes);

    // Loop through the NodeList and uncheck each one
    checkboxes.forEach((checkbox) => {
      (checkbox as HTMLInputElement).disabled = false;
      (checkbox as HTMLInputElement).classList.add("my-disabled");
    });
  }

  uncheckAllCheckboxes();

  // document.addEventListener("astro:page-load", () => {
  //   uncheckAllCheckboxes();
  // });
</script>

<Layout>
  <body>
    <main class="pt-16">
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <Image width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>

        <section>
          <h1 class="mb-2">{title}</h1>
          <p class="text-base-dim-content font-mono text-sm">
            {"> "}{description}
          </p>
        </section>

        <hr class="my-4" />

        <Prose>
          <slot />
        </Prose>
      </article>
    </main>
  </body>
</Layout>
